<form method="POST" action="/articles">
    <div class="form-group">
        <label for="name">Title</label>
        <input type="text" name="title" placeholder="What is the title?" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="author-name">Author:</label>
        <select name="authorId" class="form-control" required>
            <option value="0">Choose your Name Below</option>
            <% if(authors) { %>
                <% authors.forEach(function (a) { %>
                    <option value="<%=a.id%>">
                        <%= a.name %>
                    </option>
                <% }); %>
            <% } %>
        </select>
        Don't see your name?
        <a href="/authors/new">Register Here</a>!
        <br>
    </div>
    <div class="form-group">
        <label for="content">Article Content:</label>
        <textarea class="form-control" name="content" id="content"></textarea>
    </div>
    <div class="form-group">
        <label for="tags">Tags:</label>
        <input type="text" name="tags" class="form-control" placeholder="Tag a subject/topic!">
    </div>
        <button class="btn btn-primary form-control" type="submit" id="submit-btn">Submit</button>
</form>
